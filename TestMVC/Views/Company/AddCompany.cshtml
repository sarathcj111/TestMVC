@model TestMVC.Models.CompanyModel

@{
    ViewData["Title"] = "Add Company";
}

<h1>Add New Book</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCompany">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                @Html.DropDownListFor(m => m.City, new SelectList(ViewBag.CityList, "Value", "Text"), "–Select City–")
                @*new SelectList(Model.City, "Id", "Name")*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to All Company</a>
</div>